<div class="container">
  <div class="col-md-8">
    <div class="jumbotron">
       <h1>Bright Ideas</h1>
       <p>We are the first peer-to-peer idea sharing platform. We operate an online community that enables people to share & get inspiration through ideas.</p>
     </div>
  </div>


  <div class="col-md-4">
    <h6>Sign Up or <a href="/">Login</a></h6>
    <br>

    <% if flash[:errors] %>
      <% flash[:errors].each do |message| %>
      <div class="alert alert-danger">
      <p><%= message %></p>
      </div>
      <% end %>
    <% end %>

    <form action="/create_user" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <input id="email" type="text" class="form-control" name="name" placeholder="First Name">
    </div>
    <br>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <input type="text" class="form-control" name="alias" placeholder="Alias">
    </div>
    <br>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
      <input id="email" type="text" class="form-control" name="email" placeholder="Email">
    </div>
    <br>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <input id="password" type="password" class="form-control" name="password" placeholder="Password">
    </div>
    <br>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <input id="password" type="password" class="form-control" name="password_confirmation" placeholder="Confirm Password">
    </div>
    <br>
    <input type="submit" class="btn btn-success" name="" value="Register">
  </form>

  </div>

</div>
